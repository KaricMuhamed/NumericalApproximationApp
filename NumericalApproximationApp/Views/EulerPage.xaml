<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:NumericalApproximationApp.ViewModels"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Maui;assembly=LiveChartsCore.SkiaSharpView.Maui"
             x:Class="NumericalApproximationApp.Views.EulerPage"
             BackgroundColor="{StaticResource PrimaryDark}"
             Title="Euler metoda">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">

            <Label Text="Euler metoda" Style="{StaticResource HeroTitle}" />
            <BoxView HeightRequest="3" Color="{StaticResource AccentPurple}"
